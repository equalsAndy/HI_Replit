# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Required: Database connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://username:password@your-host.neon.tech/database?sslmode=require

# Required: Secret key for session management
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-secure-random-session-secret-here

# Optional: Environment mode
NODE_ENV=development

# Optional: Port for local development
PORT=5000

# Optional: Feature flag environment (for dual-environment workflow)
ENVIRONMENT=development